#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

int main(int argc, string argv[]) 
{
    if(argc != 2)
      printf("Usage: ./caesar k\n");

	return 0;
}
    int key = atoi(argv[1]);
    
   
    for(i = 0 , len = strlen(plaintext); i<len; i++)
    {
        if(isupper(plaintext[i]))
          printf("%c", plaintext[1] - 'A' + key%26 + 'A'));
        
        else if(islower(plaintext[i]))
          
          printf("%c", plaintext[1] - 'a' + key%26 + 'a'));
          
        else
          printf("%c", plaintext[i]);
    }
    
    printf("\n");
}
    
 
