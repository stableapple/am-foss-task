extern crate regex;

use regex::Regex;

fn main() 
      {
  use std::io::{stdin,stdout,write};

  let mut mail=string::new()

  println!("Enter Email: ")

  let_=stdout().flush()

  if Regex::new(r"^[a-zA-Z0-9]+@[a-z][.]?[a-z]*").unwrap().is_match(&mut mail) == true

  {
    println!("Valid email")

  }
  else 
  {
    println!("Invalid  email")
  }
  
}
